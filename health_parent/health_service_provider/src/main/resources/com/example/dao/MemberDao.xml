<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.MemberDao">
    <!--    新增会员-->
    <insert id="add" parameterType="com.example.pojo.Member">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_member
        (fileNumber,name,sex,idCard,
        regTime,password,email,birthday,remark)
        values
        (#{fileNumber},#{name},#{sex},#{idCard},
        #{regTime},#{password},#{email},#{birthday},#{remark})
    </insert>

    <!--    根据邮箱地址查询-->
    <select id="findByEmail" parameterType="string" resultType="com.example.pojo.Member">
        select *
        from t_member
        where email = #{email}
    </select>
    <!-- 根据id查询 -->
    <select id="findById" parameterType="int" resultType="com.example.pojo.Member">
        select *
        from t_member
        where id=#{id}
    </select>
    <select id="findMemberCountBeforeDate" resultType="java.lang.Integer" parameterType="string">
        select count(id)
        from t_member
        where regTime &lt;= #{date}
    </select>
    <!--根据日期统计会员数-->
    <select id="findMemberCountByDate" parameterType="string" resultType="int">
        select count(id) from t_member where regTime = #{value}
    </select>

    <!--根据日期统计会员数，统计指定日期之后的会员数-->
    <select id="findMemberCountAfterDate" parameterType="string" resultType="int">
        select count(id) from t_member where regTime &gt;= #{value}
    </select>

    <!--总会员数-->
    <select id="findMemberTotalCount" resultType="int">
        select count(id) from t_member
    </select>
</mapper>